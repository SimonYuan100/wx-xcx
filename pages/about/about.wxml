    <view class="com-box">
      <text class='com-name'>{{comName}}</text>
      <text class='com-biref'>{{brief}}</text>
    </view>
    <view class="content">
      <view class='phone'>联系人：孔经理</view>
      <view class="mobile" bindtap='callme'>手机：<text style="color:#ff7f00">{{mobile}}</text></view>
