<!--index.wxml-->
<view class="container">
  <view class="login" bindtap="goNext">
    <text class="title">{{comName}}</text>
    <text class="detail">{{detail}}</text>
    <image class="userinfo-img" src="{{userInfo.avatarUrl}}"></image>
    <!-- <text class="userinfo-nickname">{{userInfo.nickName}}</text> -->
  </view>
</view>
<swiper indicator-dots="{{indicatorDots}}" class="swiper"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image"/>
    </swiper-item>
  </block>
</swiper>
<view class="iocn-list">
  <block wx:for="{{srcArr}}">
    <image class="icon" src="{{item}}"></image>
  </block>
</view>
